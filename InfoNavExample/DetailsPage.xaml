<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InfoNavExample.DetailsPage"
             Title="DetailsPage">
    <StackLayout Padding="20" BackgroundColor="Coral">
        <!-- Label to display the passed user information -->
        <Label x:Name="userInfoLabel" 
               FontSize="24" 
               TextColor="Black" 
               HorizontalOptions="Center" 
               VerticalOptions="Center" />

        <Label x:Name="userProductId" FontSize="Header" TextColor="DarkSlateBlue"/>
        <Label x:Name="userProductName" FontSize="Header" TextColor="DarkSlateBlue"/>


    </StackLayout>
</ContentPage>